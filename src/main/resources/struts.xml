<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN"
        "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
    <constant name="struts.i18n.encoding" value="UTF-8"/>
    <constant name="struts.enable.SlashesInActionNames" value="true"/>
    <constant name="struts.mapper.alwaysSelectFullNamespace" value="false"/>
    <constant name="struts.patternMatcher" value="regex"/>

    <!-- 国际化支持 -->
    <!--<constant name="struts.custom.i18n.resources" value="global"/>-->

    <!-- All action packages should extend this package for infrastructure support -->
    <package name="reins-default" extends="struts-default">
        <result-types>
            <result-type name="json" class="org.apache.struts2.json.JSONResult"/>
        </result-types>

        <global-results>
            <result name="none" type="httpheader">
                <param name="status">404</param>
            </result>
            <result name="input" type="httpheader">
                <param name="status">400</param>
            </result>
        </global-results>
    </package>

    <!-- 路由工作由struts完成，每个子模块使用一个对应的路由文件　-->
    <include file="router/*.xml"></include>
</struts>