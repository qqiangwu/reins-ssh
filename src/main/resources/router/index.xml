<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN"
        "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
    <package name="index" namespace="/" extends="reins-default">
        <action name="login">
            <result>/WEB-INF/pages/login.jsp</result>
        </action>
        <action name="loginfailed">
            <result>/WEB-INF/pages/loginfailed.jsp</result>
        </action>
        <action name="denied">
            <result>/WEB-INF/pages/accessdenied.jsp</result>
        </action>
        <action name="logout">
            <result>/WEB-INF/pages/logout.jsp</result>
        </action>
        <action name="index">
            <result>/WEB-INF/pages/index.jsp</result>
        </action>
    </package>
</struts>