<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN"
        "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
    <!-- 用于页面控制的controller -->
    <package name="note-ctrl" namespace="/note" extends="reins-default">
        <action name="main" class="cn.edu.sjtu.reins.ssh.web.note.controller.NoteListCtrl">
            <result name="success">/WEB-INF/pages/note/main.jsp</result>
        </action>
    </package>

    <!-- 用于ajax的controller -->
    <package name="note-api" namespace="/api/note" extends="reins-default">
        <action name="add" class="cn.edu.sjtu.reins.ssh.web.note.api.AddNoteApi">
            <result type="httpheader">
                <param name="status">200</param>
            </result>
        </action>
    </package>
</struts>