<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN"
        "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
    <!-- 用于页面控制的controller -->
    <package name="news" namespace="/action/news" extends="reins-default">
        <action name="view/{newsId}" class="cn.edu.sjtu.reins.ssh.web.note.action.ViewNewsAction">
            <result name="success">/WEB-INF/view/news/view.jsp</result>
        </action>
        <action name="subpage/{pageNum}" class="cn.edu.sjtu.reins.ssh.web.note.action.ViewSubPageAction">
            <result name="success">/WEB-INF/view/news/subpage.jsp</result>
        </action>
    </package>

    <!-- 用于ajax的controller -->
    <package name="news-api" namespace="/api/news" extends="reins-default">
        <action name="addview" class="cn.edu.sjtu.reins.ssh.web.note.api.AddViewApi">
            <result name="success" type="httpheader">
                <param name="status">200</param>
            </result>
        </action>
        <!-- 新闻中浏览次数、评论次数、点赞次数动态更新 -->
        <action name="newsdetail" class="cn.edu.sjtu.reins.ssh.web.note.api.ViewNewsDetailApi">
            <result name="success" type="json">
                <param name="root">result</param>
            </result>
        </action>
    </package>
</struts>